@model List<DAL.DTO.EmployeeList>

<div class="card">
    <div class="card-body">
        @if (ViewBag.SuccessMessage != null)
        {
            <div class="alert alert-success" role="alert">
                @ViewBag.SuccessMessage
            </div>
        }
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>
                        <div style="text-align:center">
                            Colaboradores de turno
                        </div>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var employee in Model.Where(m => m.HasTimeRunning))
                {
                    <tr>
                        <td>
                            <div id="@employee.Id" class="row toEmployeeInfo">
                                <div class="col-6">
                                    @employee.Info
                                </div>
                                <div class="col-3" style="text-align:center">
                                    @if (employee.HasTimeRunning)
                                    {
                                        <span class="badge badge-primar">
                                            <i class="icon-watch"></i>
                                        </span>
                                    }
                                </div>
                                <div class="col-3" style="text-align:right">
                                    <i class="icon-arrow-right13"></i>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <hr />
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>
                        <div style="text-align:center">
                            Lista de colaboradores
                        </div>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var employee in Model.Where(m => !m.HasTimeRunning))
                {
                    <tr>
                        <td>
                            <div id="@employee.Id" class="row toEmployeeInfo">
                                <div class="col-6">
                                    @employee.Info
                                </div>
                                <div class="col-3" style="text-align:center">
                                    @if (employee.HasTimeRunning)
                                    {
                                        <span class="badge badge-primary">De turno</span>
                                    }
                                </div>
                                <div class="col-3" style="text-align:right">
                                    <i class="icon-arrow-right13"></i>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('.toEmployeeInfo').click(function (e) {
            window.location.href = "/Employee/Info/" + this.id;
        });
    })
</script>